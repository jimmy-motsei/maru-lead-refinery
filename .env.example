# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MAX_CONCURRENT_REQUESTS=5

# HubSpot API
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_DEAL_STAGE=appointmentscheduled
HUBSPOT_PIPELINE_ID=default

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+27xxxxxxxxx

# Meta (Facebook/Instagram) Webhooks
META_VERIFY_TOKEN=your_custom_verify_token
META_APP_SECRET=your_meta_app_secret
META_PAGE_ACCESS_TOKEN=your_meta_page_access_token

# TikTok API (Optional)
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Proxycurl (LinkedIn Scraping - Optional)
PROXYCURL_API_KEY=your_proxycurl_api_key

# Webhook Security
WEBHOOK_SECRET=your_webhook_secret_for_validation

# Application URL (for webhook callbacks)
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Processing Configuration
ENABLE_AUTO_REPLY=true
DEDUPLICATION_HOURS=2
MAX_PROCESSING_RETRIES=3
